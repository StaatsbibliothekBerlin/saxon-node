{
    "name": "saxon-node",
    "description": "An exploration of binding Saxon/C",
    "version": "0.1.2",
    "main": "./index.js",
    "author": {
        "name": "roger",
        "email": "mathmldashx@yahoo.com"
    },
    "keywords": [],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/rimmartin/saxon-node"
    },
    "dependencies" : {
      "node-pre-gyp": "0.6.13"
    },
    "bundledDependencies":["node-pre-gyp"],
    "devDependencies" : {
        "co" : "4.6.0",
        "co-fs" : "1.2.0",
        "should" : "7.1.1",
        "mocha" : "2.3.3",
        "co-mocha" : "1.1.2",
        "aws-sdk": "2.2.11"
    },
    "scripts": {
        "install": "node-pre-gyp install --fallback-to-build",
        "prebuild": "node-pre-gyp rebuild && node-pre-gyp package",
        "test": "export NODE_PATH=`pwd`/build/Release:$NODE_PATH && mocha --harmony --require should --require co-mocha --timeout 7000 "
  
    },
    "binary": {
        "module_name": "saxonXslt",
        "module_path": "./lib/binding/",
        "host": "https://saxon-node.s3-us-west-2.amazonaws.com",
        "remote_path": "./v{version}"
    },    
    "bugs": {
        "url": "https://github.com/rimmartin/saxon-node/issues"
    }
}
